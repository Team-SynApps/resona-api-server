<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="ERROR" name="JSONConfigDemo" packages="com.synapps.atch">
    <Properties>
        <Property name="mongoDbConnectionString">${LOG_MONGODB_CONNECTION_STRING}</Property>
    </Properties>

    <ThresholdFilter level="debug"/>

    <Appenders>
        <Console name="STDOUT">
            <PatternLayout>
                <Pattern>%d{${LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd HH:mm:ss.SSS}} %highlight{${LOG_LEVEL_PATTERN:-%5p}}{FATAL=red blink, ERROR=red, WARN=yellow bold, INFO=green, DEBUG=green bold, TRACE=blue} %style{${sys:PID}}{magenta} [%15.15t] %style{%-40.40C{1.}}{cyan} : %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}</Pattern>
            </PatternLayout>
        </Console>
        <NoSql name="MongoDbAppender">
            <MongoDb4 connection="mongodb://dbsquddnr:bw990825@ec2-13-58-121-9.us-east-2.compute.amazonaws.com:27017/log.system?authSource=admin" />
        </NoSql>
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="STDOUT"/>
        </Root>
        <Logger name="logger" level="INFO">
            <AppenderRef ref="MongoDbAppender"/>
        </Logger>
        <Logger name="logger" level="WARN">
            <AppenderRef ref="STDOUT"/>
        </Logger>
        <Logger name="logger" level="FATAL">
            <AppenderRef ref="STDOUT"/>
        </Logger>
    </Loggers>
</Configuration>